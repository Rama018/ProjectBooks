@model ProjectBooks.Models.ViewModel.AuthorBookVM

@{
    ViewData["Title"] = "CreateBook";
}

<h1>CreateBook</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBookBtn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="author.ID" id="author.ID" />

            <div class="form-group">
                <label asp-for="books.Name" class="control-label"></label>
                <input asp-for="books.Name" class="form-control" />
                <span asp-validation-for="books.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="books.Description" class="control-label"></label>
                <input asp-for="books.Description" class="form-control" />
                <span asp-validation-for="books.Description" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
