@using static ProjectBooks.Models.ViewModel.UserVM;
@model ProjectBooks.Models.ViewModel.UserVM



<html>
<head>

    <link rel="stylesheet" href="~/css/Style.css" />
</head>

<body>
    <h2>Registr</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="RegistrUser" method="post" enctype="multipart/form-data" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" id="Id"/>
                
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" type="tel" class="form-control" required />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" required />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckPassword" class="control-label"></label>
                    <input asp-for="CheckPassword" type="password" class="form-control"  />
                    <span asp-validation-for="CheckPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select name="userRole" asp-for="userRole">
                        @foreach (var role in Enum.GetValues(typeof(UserRoleVM)))
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create New Account" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>



